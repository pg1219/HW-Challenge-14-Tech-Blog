{{#each posts as |post|}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2>
        <a href="/post/{{post.id}}">{{post.title}}</a>
      </h2>
      <p>
        <span class="post">{{post.body}}</span>
      </p>
      <p>Created by
        {{post.username}}
        on
        {{format_date post.date}}</p>
    </div>
  </div>
{{/each}}